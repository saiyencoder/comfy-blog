<div class="card mx-auto" style="width: 50rem;">
  <div class="card-header posts-header">
    <h4 class="card-title text-center">
      <%= @post.title %>
    </h4>
  </div>
  <div class="card-body">
    <p class="card-text">
      <%= @post.content %>
    </p>
  </div>
  <% if signed_in? && current_user.id == @post.user_id %>
    <div class="card-footer text-center">
      <%= link_to "Edit", edit_post_path, class: "btn btn-warning" %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
  <% end %>
</div><br><br><br>

<div class="container">
  <h2 class="comment-title text-center"><strong><%= pluralize(@post.comments.count, "Comment") %></strong></h2>
  <%= render @post.comments %>
  <% if signed_in? %>
    <div class="comment-form">
      <hr />
      <h3 class="text-center">Leave a reply</h3><br>
      <div class="mx-auto" style="width: 50rem;">
        <%= render 'comments/form' %>
      </div>
    </div>
  <% end %>
</div>

