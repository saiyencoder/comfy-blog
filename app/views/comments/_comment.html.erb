<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.name %>: </strong>
          <%= comment.comment %>
        </p>
      </div>
    </div>
    <% if signed_in? && comment.name == current_user.name %>      
      <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
    <% end %>
  </article>
</div>